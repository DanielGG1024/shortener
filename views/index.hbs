<div class="container">
    <div class="row justify-content-center">
        <div class="col-5">
            <form action="/" method="POST" class="mt-5">
                <h1 class="text-center">URL shortener</h1>
                <div class="mx-auto"style="width:120px;">
                    <img class="w-100 mt-3"
                        src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT2dK8ftMKOes2H83-sHAjhQexHY5AJg91y5A&usqp=CAU"
                        alt="">
                </div>
                {{#if error}}<div class="text-danger">{{error}}</div>{{/if}}
                <div class="form-group mt-3">
                    <label for="url">輸入想縮短的網址</label>
                    <input type="text" class="form-control" id="url" name="url" aria-describedby="urlHelp"
                        placeholder="https://www.google.com/" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Shorten</button>
                </div>
            </form>
        </div>
    </div>
</div>